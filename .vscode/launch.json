  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "state-sync-log - Jest debug current file",
      "program": "${workspaceFolder}/packages/state-sync-log/node_modules/jest/bin/jest.js",
      "args": ["--verbose", "-i", "--no-cache", "--testPathPattern", "${fileBasename}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["**/node_modules/**", "<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/state-sync-log"
    }
  ]
}
